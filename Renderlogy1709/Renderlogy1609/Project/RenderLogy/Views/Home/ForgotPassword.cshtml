<head>
    <!-- BEGIN META SECTION -->
    <meta charset="utf-8">
    <title>Renderlogy Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta content="" name="description" />
    <meta content="themes-lab" name="author" />
    <link rel="shortcut icon" href="~/assets/img/favicon.png">
    <!-- END META SECTION -->
    <!-- BEGIN MANDATORY STYLE -->
    <link href="~/assets/css/icons/iconsmin.css" rel="stylesheet">
    <link href="~/assets/css/bootstrapmin.css" rel="stylesheet">
    <link href="~/assets/css/pluginsmin.css" rel="stylesheet">
    <link href="~/assets/css/stylemin.css" rel="stylesheet">
    <link href="~/assets/css/custom.css" rel="stylesheet">

    <link href="#" rel="stylesheet" id="theme-color">
    <!-- END  MANDATORY STYLE -->
    <!-- BEGIN PAGE LEVEL STYLE -->
    <link href="~/assets/css/animate-custom.css" rel="stylesheet">
    <!-- END PAGE LEVEL STYLE -->
    <script src="~/assets/plugins/modernizr/modernizr-2.6.2-respond-1.1.0.min.js"></script>
</head>

<body class="login fade-in" data-page="password">
    <!-- BEGIN PASSWORD BOX -->
    <div class="container" id="login-block">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-sm-offset-3 col-md-offset-4">
                <div class="login-box clearfix animated flipInY">
                    <div class="page-icon animated bounceInDown bg-blue">
                        <img src="~/assets/img/account/login-questionmark-icon.png" alt="Questionmark icon" />
                    </div>
                    <div class="login-logo">
                        <a href="#">
                            <img src="~/assets/img/renderlogy_logo.png" alt="Renderlogy Logo" />
                        </a>
                    </div>
                    <hr />
                    <div class="login-form">
                        <!-- BEGIN ERROR BOX -->
                        <div class="alert alert-danger hide">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <h4>Error!</h4>
                            Your Error Message goes here
                        </div>
                         @if (ViewBag.FogotPwd != null)
                            {
                                @Html.Label(ViewBag.FogotPwd as string, new { @class = "alert alert-danger dis-block" })                          
                            }
                        <!-- END ERROR BOX -->
                        @using (Html.BeginForm(new { @class="align-center"}))
{
                        //<form action="#" method="get" class="align-center">
                            @*<p>Enter your email address below and we'll send a special reset password link to your inbox.</p>*@
                            <p>Enter your email address below and we'll send a password to your inbox.</p>
                            <input type="email" name="txtForgEmail" placeholder="Email" class="input-field" required />
                            <button type="submit" class="btn btn-primary btn-reset m-auto dis-block">Fogot password</button>
                            //</form>
                        }
                        <div class="login-links">
                            <a href="../Home/SignIn">Already have an account?  <strong>Sign In</strong></a>
                            @*@Html.ActionLink("Already have an account? Sign In", "SignIn")*@
                            <br>
                            <a href="../Home/SignUp">Don't have an account? <strong>Sign Up</strong></a>
                            @*@Html.ActionLink("Don't have an account? Sign Up", "SignUp")*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END PASSWORD BOX -->
    <!-- BEGIN MANDATORY SCRIPTS -->
    <script src="~/assets/plugins/jquery111.js"></script>
    <script src="~/assets/plugins/jquerymigrate121.js"></script>
    <script src="~/assets/plugins/jqueryui/jqueryui1104.min.js"></script>
    <script src="~/assets/plugins/jquery-mobile/jquerymobile142.js"></script>
    <script src="~/assets/plugins/bootstrap/bootstrapmin.js"></script>
    <script src="~/assets/plugins/jquery.cookie.min.js" type="text/javascript"></script>
    <!-- END MANDATORY SCRIPTS -->
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src="~/assets/plugins/backstretch/backstretch.min.js"></script>
    <script src="~/assets/js/account.js"></script>
    <!-- END PAGE LEVEL SCRIPTS -->
</body>

</html>
